<h2 class='title'> Your All-time Mojo! </h2>

<div class='right-row clearfix'>
  <!-- start with mojo meter of 1 instead of all 0's? -->
  <div class='mojo-count happy'> { <%= @scounts['biggrin'] %>, <%= @scounts['smile'] %> } </div>  
  <img class='smi' src='../static/smi/biggrin.png'>
  <img class='smi' src='../static/smi/smile.png'>'S
</div>

<div class='right-row  clearfix'>
  <div class='mojo-count neutral'> <%= @scounts['dry'] %> </div>  
  <img class='smi' src='../static/smi/dry.png'>'S
</div>

<div class='right-row  clearfix'>
  <div class='mojo-count sad'> { <%= @scounts['sad'] %>, <%= @scounts['tears'] %> } </div>  
  <img class='smi' src='../static/smi/sad.png'>
  <img class='smi' src='../static/smi/tears.png'>'S
</div>

<!-- qotd based on user's last post -->
<div class='right-row quote clearfix'>
  <img class='smi' src='../static/smi/dry.png'>
  <div class='text-quote'>
    <span class='neutral'>
      If you do not change direction, you may end up where you are heading.
    </span>
    <div class='time'>
      <a href='http://en.wikipedia.org/wiki/Laozi' target="_blank">Lao Tzu</a> posted about 2300 years ago
    </div>
  </div>
</div>

<!-- Add friend -->
<h2 class='title'> Add Friend? </h2>
<div class='right-row '>
  <div> Type in the email of friends you'd like to invite.</div>
  
	<form class='' id='send_friend' method='post' action='/invite'>
      <input type=text name="friend_email" style='width: 18em; margin: 1em; margin-left: 0'  />
	  <input type=submit name="submit_email" value="Invite!" onSubmit="return validateInvite();" />
    </form>
</div>

<!-- list of friends -->
<h2 class='title'> Friends </h2>
<div class='right-row quote clearfix'>
    <!-- accepted friends -->
    <%  if @friends; @friends.each do |s| %>

          
        
            <table width="100%" >
              <col align="left"   width="1000" style='text-align:left' />
              <col align="right"  style='text-align:right'/>
              <col align="right"  style='text-align:right'/>
              <tr>
                <td> <a href='/friend/<%= user_of(s.user).id %>' > <%= name_of(s.user) %> </a>  </td>
                <span class='sad'>
                <td> <a href='/end_friend/<%= s.id %>' > unfriend </a> </td>
                </span>
              </tr>
            </table>
            
        

    <% end end %>
    <!-- pending friends -->
    <%  if @pending_friends; @pending_friends.each do |s| %>


        
            <table width="100%" >
              <col align="left"   width="1000" style='text-align:left' />
              <col align="right"  style='text-align:right'/>
              <col align="right"  style='text-align:right'/>
              <tr>
                <td><%= name_of(s.user) %> </td>
                <span class='happy'>
                <td> <a href='/accept_friend/<%= s.id %>' > accept </a> </td>
                </span> 
                <span class='sad'>
                <td> <a href='/end_friend/<%= s.id %>' class='sad' > reject </a> </td>
                </span>
              </tr>
            </table>
            


    <% end  end %>
    <!-- requested friends -->
    <%  if @requested_friends; @requested_friends.each do |s| %>

            <table width="100%" >
              <col align="left"   width="1000" style='text-align:left' />
              <col align="right"  style='text-align:right'/>
              <tr>
                <td><%= name_of(s.user) %> (pending) </td>
                <span class='neutral'>
                <td> <a href='/end_friend/<%= s.id %>' > cancel </a> </td>
                </span>
              </tr>
            </table>

    <% end  end %>
</div>



